{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description|slice(0,100) }}</td>
                <td>{{ product.price }}</td>

                {% if product.stock > 0 %}
                    <td>{{ product.stock }}</td>
                {% else %}
                <td>
                    <span class="text-danger">Stock épuisé</span>
                </td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}">Afficher</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun produit à afficher</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_product_new') }}">Create new</a>
{% endblock %}
